.sign-calendar {
  font-size: 30rpx;
  text-align: center;
  background-color: #fff;
  padding: 20rpx 40rpx;
  color: #000;
  width: 100%;
  box-sizing: border-box;
}

.top-bar {
  font-size: 32rpx;
    height: 60rpx;
    /* line-height: 100rpx; */
    /* border-bottom: 1rpx solid rgba(255, 255, 255, 0.3); */
    display: flex;
    color: #5275f5;
}

.top-bar>view {
  flex: 1;
}
.week-day{
  text-align: center;
}
.week {
  display: flex;
    align-items: center;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 30rpx;
    color: #999;
}

.week view {
  flex: 0 0 95.7rpx;
}
.turning image{
  width: 40rpx;
  height: 34rpx;
  vertical-align: middle;
}
.content {
  width: 100%;
  position: relative;
  height: 340rpx;
  overflow: hidden;
  transition: height 0.4s ease;
  box-sizing: border-box;
}
.days {
  transition: top 0.3s;
    display: flex;
    flex-wrap: wrap;
    width: 100%;
    position: relative;
    box-sizing: border-box;
}
.item {
  position: relative;
  display: block;
  height: 60rpx;
  line-height: 60rpx;
  color: #000;
  width: 95.5rpx;
  margin-bottom:10rpx;
  text-align: center;
}
.day {
  font-style: normal;
  display: inline-block;
  vertical-align: middle;
  width: 60rpx;
  height: 60rpx;
  font-size: 30rpx;
  line-height: 60rpx;
  overflow: hidden;
  border-radius: 50%;
  position: relative;
  z-index: 99;
}
.todays{
  background: #ff6565;
  color: #fff;
}
.day.chosed {
  background-color: #5275f5;
  color: #fff;
}
.nolm {
  color: #999;
  opacity: 0.5;
}
.sign {
  font-style: normal;
  width: 20rpx;
  height: 20rpx;
  background: #fff;
  border-radius: 10rpx;
  position: absolute;
  left: 50%;
  margin-left: -10rpx;
  bottom: 0;
  pointer-events: none;
}
.tips {
  position: absolute;
  z-index: 9;
  width: 100%;
  font-weight: bold;
  line-height: 20rpx;
  letter-spacing: 8rpx;
  left: 0;
  bottom: 0;
  text-align: center;
  color: #5275f5;
}
.hide {
  height: 60rpx !important;
}
.weektoggel {
  width: 60rpx;
  height: 40rpx;
  margin: 10rpx auto 0;
}
.weektoggel.down {
  transform: rotate(180deg);
}