/* pages/register/register.wxss */
.regiester{
  width: 750rpx;
  padding:20rpx 60rpx 60rpx 60rpx;
  box-sizing: border-box;
}
.tips{
  font-size: 32rpx;
  font-weight: bold;
  color: #000;
  color: red;
  margin-bottom: 80rpx;
  opacity: 0.5;
}
.regiester-tab{
  width: 100%;
  font-size: 36rpx;
  line-height: 60rpx;
  margin-bottom: 30rpx;
}
.regiester-tab .tabcell.active{
  color: #5275f5;
  border-bottom: 4rpx solid #5275f5;
}
.regiester-tab .tabcell{
  display: inline-block;
  margin-right: 50rpx;
}
input{
  width: 630rpx;
  font-size: 34rpx;
  height: 100rpx;
  line-height: 100rpx;
  margin-bottom: 16rpx;
  border-radius: 6rpx;
  padding: 0 28rpx;
  color: #999;
  box-sizing: border-box;
}
.regiester_form{
  width: 630rpx;
  display: inline-block;
  position:relative;
}
.form_item{
  width: 630rpx;
  position: relative;
  z-index:9;
  background: #f5f5f5;
}
.phoneNumber{
  width: 400rpx;
}
.code{
  position: absolute;
  z-index:999;
  right: 28rpx;
  top: 0;
  font-size: 34rpx;
  z-index: 99;
  color: #5275f5;
  padding: 26rpx 15rpx;
}
.errMsg{
  width:100%;
  position:absolute;
  left: 0;
  top: 360rpx;
  text-align:center;
}
.msgSpan{
  font-size:30rpx;
  color:#fff;
  background:rgba(0,0,0,0.8);
  border-radius:10rpx;
  padding:10rpx 40rpx;
  display:inline-block;
}
.regiesterBtn{
  background: #5275f5;
  color: #fff;
  font-size: 38rpx;
  width: 630rpx !important;
  height: 100rpx;
  border-radius: 50rpx;
  margin-top: 180rpx;
}