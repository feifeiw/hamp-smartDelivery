<!--pages/files/files.wxml-->
<view class="IndexWrapper">
    <!-- 头部 -->
    <view class="tabcontent">
      <view class="picker_group">
        <picker bindchange="bindPickerChange" value="{{index}}" range="{{yearArr}}" class="yearPicker">
          <view class="picker">{{yearArr[index]}}</view>
        </picker>
        <input class="weui-input" placeholder="请输入案号" bindinput="bindKeyInput" class="casePicker" />
         <button class="searchBtn" bindtap="getCaseList">查询</button>
      </view>
    </view>
    <!-- 列表 -->
    <view class="tabList">
        <view wx:if="{{dataArr.length > 0}}"  class="borderBt">
            <block wx:for="{{dataArr}}" wx:key="*this" wx:for-index = "index">
                <view class="tabLi">
                    <view class="title" bindtap="getDetail" data-index="{{index}}" data-caseno="{{item.caseNO}}">
                      <text class="fl">{{item.caseNO}}</text>
                      <view class="fr">
                        <text>共{{item.filecount}}卷</text>
                        <view class="arrowIcon"><image src="../../static/image/{{item.showIndex == false ? 'arrow_right':'arrow_down'}}.png"></image></view>
                      </view>
                    </view>
                    <view class="detail" wx:if="{{item.showIndex == true}}">
                      <view class="detail_li" wx:for="{{detailArr}}" wx:key="*this" wx:for-item="detail" bindtap="linkCirculation" data-fileno="{{detail.fileNO}}" data-case="{{detail}}" data-count="{{item.filecount}}">
                        <view class="fileNO">{{detail.fileNO}}</view>
                        <view class="transdate">
                          <text>{{detail.holder}}</text>
                          <image src="../../static/image/time.png" class="linCirculImg"></image>
                        </view>
                      </view>
                    </view>
                </view>
            </block>
        </view>
        <view wx:else class="noMsg">
            <view>暂无数据</view>
        </view>
    </view>
</view>
