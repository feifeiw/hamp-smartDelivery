<!--pages/files/files.wxml-->
<view class="IndexWrapper">
    <!-- 头部 -->
    <view class="tabcontent">
      <view class="tabUl">
        <block wx:for="{{tabs}}" wx:key="*this">
          <view id="{{index}}" class="tabcell {{ activeIndex==index?'active':'' }} " bindtap="tabClick">
            {{item}}
          </view>
        </block>
      </view>
      <!-- 时间段 -->  
      <view class="picker_group" wx:if="{{activeIndex != 2}}">
        <image src="/static/image/date.png" class="dateIcon"></image>
        <picker mode="date" value="{{dateStart}}"  end="{{dateEnd}}" bindchange="bindDateStartChange">  
          <view class="picker">  
            {{dateStart}}  
          </view>  
        </picker>
        -
        <picker mode="date" value="{{date2}}" start="{{dateStart}}" end="{{dateEnd}}" bindchange="bindDateEndChange">  
          <view class="picker">  
            {{dateEnd}}  
          </view>  
        </picker>
        <button class="searchBtn" bindtap="bindSearch">搜索</button>
      </view> 
    </view>
    <!-- 列表 -->
    <view class="tabList" style="padding-top: {{activeIndex == 2 ? '110rpx' : '200rpx'}}">
        <view wx:if="{{dataArr.length > 0}}"  class="borderBt">
            <block wx:for="{{dataArr}}" wx:key="*this" wx:for-index = "index">
                <view class="tabLi">
                    <view class="title" bindtap="ShowDetail" data-index="{{index}}" data-caseno="{{item.caseno}}">
                      <text class="fl" style="width:78%;overflow: hidden;">{{item.caseno}}</text>
                      <view class="fr" style="width:22%;">
                        <text>{{item.filecount}}/{{item.filecount0}}</text>
                        <view class="arrowIcon"><image src="../../static/image/{{item.showIndex == false ? 'arrow_right':'arrow_down'}}.png"></image></view>
                      </view>
                    </view>
                    <view class="detail" wx:if="{{item.showIndex == true}}">
                      <view class="detail_li" wx:for="{{detailArr}}" wx:key="*this" wx:for-item="detail">
                        <view class="fileNO">
                          <text class="ellipse" wx:if="{{detail.fileNO.length > 25}}">...</text>
                            <text class="text">{{detail.fileNO}}</text>
                        </view>
                        <view class="transdate">
                          <text wx:if="{{activeIndex != 2}}">{{detail.transdate}}</text>
                          <text wx:if="{{activeIndex == 2}}">共持有{{detail.holddays}}</text>
                        </view>
                      </view>
                      <!-- 操作 -->
                      <view class="operate" wx:if="{{activeIndex == 2}}">
                        <view class="display-block txtBlue" style="width:20%;" wx:if="{{roldAuth.indexOf('101') != -1}}" bindtap="operateFile" data-caseno="{{item.caseno}}" data-type="1">
                          <image src="../../static/image/guidang.png"></image>归档
                        </view>
                        <view class="display-block txtBlue" style="width:40%;" wx:if="{{roldAuth.indexOf('102') != -1}}" bindtap="operateFile" data-caseno="{{item.caseno}}" data-type="2">
                          <image src="../../static/image/yijiao.png"></image>向上级法院移交
                        </view>
                        <view class="display-block txtRed" style="width:40%;" wx:if="{{roldAuth.indexOf('103') != -1}}" bindtap="operateFile" data-caseno="{{item.caseno}}" data-type="3">
                          <image src="../../static/image/tui.png"></image>退回基层法院
                        </view>
                      </view>
                    </view>
                </view>
            </block>
            <block wx:if="{{dataArr.length >= 10}}">
                <view class="uploadMsg">{{updateLoadText}}</view>
            </block>
        </view>
        <view wx:else class="noMsg">
            <view>暂无数据</view>
        </view>
    </view>
</view>
